#include <Servo.h>
Servo myservo1; 
Servo myservo2; 
int pos = 0; 
void setup()
{
  Serial.begin(9600);
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  myservo1.attach(4);
  myservo2.attach(6);
  
}

void loop()
{
  
 char A ;
   while(Serial.available())
   { A = Serial.read();}
  switch(A)
  {
    case '1':   digitalWrite(2,HIGH);
    			delay(2000);
    			digitalWrite(2,LOW);
    			break;
    case '2':   digitalWrite(3,HIGH);
    			delay(2000);  
				digitalWrite(3,LOW);
    			break;
    case '3':	
    			for (pos = 0; pos <= 90; pos += 1) 
                {
    			  myservo1.write(pos); 
                  myservo2.write(pos); 
                  delay(15); 
                }
  				for (pos = 90; pos >= 0; pos -= 1) 
                { 
                  myservo1.write(pos);
                  myservo2.write(pos);
                  delay(15);
  				}
    			break;
  }
  digitalWrite(5,LOW);
  digitalWrite(2,LOW);
}
